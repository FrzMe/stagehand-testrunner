<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package version="1.0" packagerversion="1.4.8">
 <name>Stagehand_TestRunner</name>
 <summary>Automated test runners for PHPUnit2 and PHPUnit.</summary>
 <description>Stagehand_TestRunner provides utility classes and scripts to automatically detect and run all test cases that are suffixed with &apos;TestCase.php&apos; under an arbitrary directory. Stagehand_TestRunner now supports PHPUnit2 and PHPUnit.
 </description>
 <maintainers>
  <maintainer>
   <user>kubo</user>
   <name>KUBO Atsuhiro</name>
   <email>iteman@users.sourceforge.net</email>
   <role>lead</role>
  </maintainer>
  </maintainers>
 <release>
  <version>0.3.0</version>
  <date>2006-04-18</date>
  <license>BSD License (revised)</license>
  <state>beta</state>
  <notes>The first release of Stagehand_TestRunner.
  </notes>
  <deps>
   <dep type="php" rel="ge" version="4.2.0" optional="no"/>
   <dep type="pkg" rel="ge" version="2.3.2" optional="yes">PHPUnit2</dep>
   <dep type="pkg" rel="ge" version="1.3.1" optional="yes">PHPUnit</dep>
   <dep type="pkg" rel="ge" version="1.4.1" optional="yes">PHP_Compat</dep>
  </deps>
  <filelist>
   <dir name="/" baseinstalldir="/">
    <dir name="docs">
     <file role="doc" name="LICENSE">
      <replace from="@package_version@" to="version" type="package-info"/>
     </file>
    </dir> <!-- /docs -->
    <dir name="Stagehand">
     <dir name="TestRunner">
      <file role="php" name="PHPUnit2TestRunner.php">
       <replace from="@package_version@" to="version" type="package-info"/>
      </file>
      <file role="php" name="PHPUnitTestRunner.php">
       <replace from="@package_version@" to="version" type="package-info"/>
      </file>
     </dir> <!-- /Stagehand/TestRunner -->
    </dir> <!-- /Stagehand -->
    <dir name="tests">
     <dir name="Stagehand">
      <dir name="TestRunner">
       <file role="test" name="PHP4TestRunner.php">
        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
       <file role="test" name="PHPUnit2TestRunnerTestCase.php">
        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
       <file role="test" name="PHPUnitTestRunnerTestCase.php">
        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
       <file role="test" name="TestRunner.php">
        <replace from="@package_version@" to="version" type="package-info"/>
       </file>
      </dir> <!-- /tests/Stagehand/TestRunner -->
     </dir> <!-- /tests/Stagehand -->
     <file role="test" name="AllTestRunner.php">
      <replace from="@package_version@" to="version" type="package-info"/>
     </file>
    </dir> <!-- /tests -->
   </dir> <!-- / -->
  </filelist>
 </release>
 <changelog>
   <release>
    <version>0.3.0</version>
    <date>2006-04-18</date>
    <license>BSD License (revised)</license>
    <state>beta</state>
    <notes>The first release of Stagehand_TestRunner.
    </notes>
   </release>
 </changelog>
</package>
